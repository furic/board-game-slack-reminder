{
  "display_information": {
    "name": "Board Game Reminder",
    "description": "Sends reminders for board game sessions and helps coordinate game selection through emoji reactions",
    "background_color": "#4A154B"
  },
  "features": {
    "bot_user": {
      "display_name": "Board Game Reminder",
      "always_online": false
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "channels:read",
        "groups:read",
        "chat:write.public",
        "reactions:write"
      ]
    }
  },
  "settings": {
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
} 